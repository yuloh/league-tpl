{
    "name": "{{ vendor | case.kebab }}/{{ package name | case.kebab }}",
    "type": "library",
    "description": ":{{ package description }}",
    "keywords": [
        "{{ vendor }}",
        "{{ package name }}"
    ],
    "homepage": "https://github.com/{{ vendor | case.kebab }}/{{ package name | case.kebab }}",
    "license": "MIT",
    "authors": [
        {
            "name": "{{ author name }}",
            "email": "{{ author email }}",
            "homepage": "{{ author website }}",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "{{ vendor | case.pascal }}\\{{ package name | case.pascal }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ vendor | case.pascal }}\\{{ package name | case.pascal }}\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
